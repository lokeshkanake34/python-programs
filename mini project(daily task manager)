# Daily Task Manager Program

# Create empty task list
tasks = []

# Display title
print("----- DAILY TASK MANAGER -----")

# Take initial number of tasks
total_task = int(input("Enter how many tasks you want to add: "))

# Add initial tasks
for i in range(1, total_task + 1):
    task_name = input(f"Enter task {i}: ")
    tasks.append(task_name)

# Menu-driven program
while True:
    print("\nChoose an operation:")
    print("1 - Add Task")
    print("2 - Update Task")
    print("3 - Delete Task")
    print("4 - View Tasks")
    print("5 - Exit")

    choice = int(input("Enter your choice: "))

    # Add new task
    if choice == 1:
        new_task = input("Enter new task: ")
        tasks.append(new_task)
        print("Task added successfully.")

    # Update existing task
    elif choice == 2:
        old_task = input("Enter task to update: ")
        if old_task in tasks:
            new_task = input("Enter new task: ")
            tasks[tasks.index(old_task)] = new_task
            print("Task updated successfully.")
        else:
            print("Task not found.")

    # Delete a task
    elif choice == 3:
        task_to_delete = input("Enter task to delete: ")
        if task_to_delete in tasks:
            tasks.remove(task_to_delete)
            print("Task deleted successfully.")
        else:
            print("Task not found.")

    # View all tasks
    elif choice == 4:
        print("\nYour Tasks:")
        for task in tasks:
            print("-", task)

    # Exit program
    elif choice == 5:
        print("Exiting Daily Task Manager...")
        break

    # Invalid choice
    else:
        print("Invalid choice. Please try again.")
